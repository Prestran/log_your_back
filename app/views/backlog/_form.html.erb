<%= simple_form_for quote, html: { class: "backlog form" } do |f| %>
  <% if backlog.errors.any? %>
    <div class="error-message">
      <%= backlog.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>