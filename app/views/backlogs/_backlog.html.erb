<div class="backlogs">
  <%= link_to backlog.name, backlog_path(backlog) %>
  <div class="backlogs-actions">
    <%= button_to "Delete",
                  backlog_path(backlog),
                  method: :delete,
                  class: "btn btn--light" %>
    <%= link_to "Edit",
                edit_backlog_path(backlog),
                class: "btn btn--light" %>
  </div>
</div>