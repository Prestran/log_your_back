<%= turbo_stream_from "backlogs" %>

<main class="container">
    <div class="header">
      <h1>Backlogs</h1>
      <%= link_to "New backlog",
                  new_backlog_path,
                  data: { turbo_frame: dom_id(Backlog.new) },
                  class: "btn btn--primary" %>
    </div>

    <%= turbo_frame_tag Backlog.new %>

    <%= turbo_frame_tag "backlogs" do %>
        <%= render @backlogs %>
    <% end %>
</main>